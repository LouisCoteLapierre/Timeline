<Window x:Class="TimelineDataExporter.Windows.DataWindow "
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimelineDataExporter.Windows"
        mc:Ignorable="d"
        Title="New Data Creation" Height="562" Width="960">
    <Window.Resources>
        <ResourceDictionary Source="/TimelineDataExporter;component/Styles/TextBoxStyles.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Height="1"/>

        <!-- DATA CREATION Column 1 & 2-->
        <!-- Title -->
        <Label Content="Title (Unique)" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Name="TitleTextBox" Margin="5,5,5,5" Style="{StaticResource PlaceholderTextBox}" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.Row="0" Grid.Column="1"/>

        <!-- Description -->
        <Label Content="Description" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Name="DescriptionTextBox" Margin="5,5,5,5" Style="{StaticResource PlaceholderTextBox}" HorizontalAlignment="Left" Height="23"  TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" Grid.Row="1" Grid.Column="1"/>

        <!-- Start date-->
        <Label Content="Start Date" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
        <DatePicker Name ="StartDatePicker" Margin="5,5,5,5" Grid.Row="2" Grid.Column="1" Width="150" HorizontalAlignment="Left"/>

        <!-- End date-->
        <Label Content="End Date" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <DatePicker Name="EndDatePicker" Margin="5,5,5,5" Grid.Row="3" Grid.Column="1" Width="150" HorizontalAlignment="Left"/>

        <Label Content="Historic Period" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox Name="HistoricPeriodComboBox" Grid.Row="4" Margin="5,5,5,5" Grid.Column="1" HorizontalAlignment="Left"/>

        <!-- Create data -->
        <Button Grid.Row="5" Margin="5,5,5,5" Grid.ColumnSpan="2" Height="30" Content="Create" Click="OnCreateDataEntry"/>

        <!-- DATA VISUALISATION Column 3 -->
        <DataGrid Name="DataGrid" Margin="5,5,5,5" Grid.Column="2" HorizontalAlignment="Left" Grid.RowSpan="5"  VerticalAlignment="Top" Width="Auto" Height="Auto"/>
    </Grid>
</Window>
